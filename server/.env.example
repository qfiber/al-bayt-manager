# Server Environment Configuration
# Copy this file to .env and fill in the values

NODE_ENV=development
PORT=4010

# PostgreSQL connection string (required)
# For Docker: postgresql://albayt:albayt_dev_password@postgres:5432/albayt
# For local:  postgresql://albayt:albayt_dev_password@localhost:5432/albayt
DATABASE_URL=postgresql://albayt:albayt_dev_password@localhost:5432/albayt

# JWT secrets (min 32 characters each)
# In development these auto-generate if not set, but tokens won't survive restarts
JWT_SECRET=change-me-to-a-random-string-at-least-32-chars
JWT_REFRESH_SECRET=change-me-to-another-random-string-at-least-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS - must match the frontend URL
CORS_ORIGIN=http://localhost:8080

# File uploads directory
UPLOAD_DIR=./uploads

# Cloudflare Turnstile CAPTCHA (optional - for login protection)
# TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Resend email service (optional - for sending emails)
# RESEND_API_KEY=re_xxxxxxxxxxxxx

# Proof-of-Work settings (optional)
# POW_DIFFICULTY=20
# POW_CHALLENGE_TTL_MS=300000
